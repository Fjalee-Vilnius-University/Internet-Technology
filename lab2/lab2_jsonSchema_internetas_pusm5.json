{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "dateAtLocation": {
      "type": "object",
      "properties": {
        "myDate": {
          "type": "string",
          "format": "date"
        },
        "location": {
          "type": "string",
          "pattern": "^[A-Z]{1,3}$"
        }
      },
      "required": ["myDate", "location"]
    },
    "building": {
      "type": "object",
      "properties": {
        "buildingType": {
          "enum": [
            "university",
            "museum",
            "hospital",
            "shop",
            "personal",
            "other"
          ]
        },
        "number": {
          "type": "string",
          "pattern": "^[A-Z][0-9]{1,3}$"
        },
        "idb": { "type": "number" },
        "edited": {
          "type": "array",
          "items": { "$ref": "#/definitions/dateAtLocation" }
        },
        "abbreviation": {
          "type": "object",
          "properties": {
            "full": {
              "type": "string",
              "maxLength": 50,
              "minLength": 5
            },
            "text": {
              "type": "string",
              "maxLength": 5
            }
          }
        }
      },
      "required": ["buildingType", "number", "idb", "edited", "abbreviation"]
    },
    "areaWithBuildings": {
      "type": "object",
      "properties": {
        "text": { "type": "string" },
        "building": { "$ref": "#/definitions/building" }
      },
      "required": ["text"]
    }
  },
  "type": "object",
  "properties": {
    "microdisctrict": {
      "allOf": [
        { "$ref": "#/definitions/areaWithBuildings" },
        {
          "properties": {
            "street": { "$ref": "#/definitions/areaWithBuildings" },
            "distanceFromCenter": { "type": "number" }
          },
          "required": ["street"]
        }
      ]
    }
  },
  "required": ["microdisctrict"]
}
