<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="building" type="Building" />

    <xs:simpleType name="Name">
        <xs:restriction base="xs:string">
            <xs:maxLength value="50" />
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="Edited">
        <xs:list itemType="xs:date"/>
    </xs:simpleType>

    <xs:complexType name="NameWithAbr">
        <xs:simpleContent>
            <xs:extension base="Name">
                <xs:attribute name="abr" type="xs:string"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <xs:complexType name="Building">
        <xs:sequence>
            <xs:element name="edited" type="Edited" />
            <xs:choice>
                <xs:element name="name" type="Name" />
                <xs:element name="nameWithAbr" type="NameWithAbr" />
            </xs:choice>
        </xs:sequence>
    </xs:complexType>
</xs:schema>

